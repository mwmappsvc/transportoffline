<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/start_update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Update"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/current_task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/start_update_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_task_description"
        android:layout_marginTop="16dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:visibility="visible" />

    <TextView
        android:id="@+id/progress_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_bar"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:text="0%"
        android:textSize="18sp"
        android:padding="8dp" />

    <Button
        android:id="@+id/configure_url_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configure URL"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/bus_schedule_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus Schedule Search"
        android:layout_below="@id/configure_url_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:backgroundTint="@android:color/darker_gray" />
</RelativeLayout>
